<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="22dp"
    android:background="#FFF3E0">

    <!-- Título -->
    <TextView
        android:id="@+id/txtTitleDiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Juego de División"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#E65100"
        android:layout_marginBottom="30dp" />

    <!-- Operación -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="25dp">

        <TextView
            android:id="@+id/txtNum1Div"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="#BF360C"
            android:padding="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="÷"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="#BF360C"
            android:padding="10dp" />

        <TextView
            android:id="@+id/txtNum2Div"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="#BF360C"
            android:padding="10dp" />
    </LinearLayout>

    <!-- Caja de Respuesta -->
    <EditText
        android:id="@+id/edtAnswerDiv"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Tu respuesta"
        android:textSize="22sp"
        android:gravity="center"
        android:inputType="number"
        android:padding="15dp"
        android:background="@android:drawable/edit_text"
        android:layout_marginBottom="25dp" />

    <!-- Botón Comprobar -->
    <Button
        android:id="@+id/btnCheckDiv"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="Comprobar"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:padding="15dp"
        android:background="#FB8C00"
        android:layout_marginBottom="20dp" />

    <!-- Resultado -->
    <TextView
        android:id="@+id/txtResultDiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="22sp"
        android:textColor="#2E7D32"
        android:gravity="center"
        android:layout_marginTop="10dp" />

    <!-- Botón Siguiente -->
    <Button
        android:id="@+id/btnNextDiv"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="Siguiente"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:padding="15dp"
        android:background="#43A047"
        android:layout_marginTop="30dp" />

</LinearLayout>
