<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="24dp"
    android:background="#FFF7E6">

    <!-- Título -->
    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Juego de Sumas"
        android:textSize="34sp"
        android:textStyle="bold"
        android:textColor="#FF9800"
        android:layout_marginBottom="30dp" />

    <!-- Operación -->
    <TextView
        android:id="@+id/txtOperacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5 + 3 = ?"
        android:textSize="48sp"
        android:textStyle="bold"
        android:textColor="#E65100"
        android:layout_marginBottom="40dp" />

    <!-- Caja para escribir respuesta -->
    <EditText
        android:id="@+id/edtRespuesta"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:hint="Respuesta"
        android:textSize="28sp"
        android:gravity="center"
        android:inputType="number"
        android:backgroundTint="#FF9800"
        android:textColor="#000000"
        android:textColorHint="#777777"
        android:layout_marginBottom="40dp" />

    <!-- Botón Comprobar -->
    <Button
        android:id="@+id/btnComprobar"
        android:layout_width="260dp"
        android:layout_height="90dp"
        android:text="✔ Comprobar"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#ce1515ff"
        android:backgroundTint="#4CAF50"
        android:layout_marginBottom="25dp" />

    <!-- Botón Siguiente -->
    <Button
        android:id="@+id/btnSiguiente"
        android:layout_width="260dp"
        android:layout_height="90dp"
        android:text="➡ Siguiente"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#d62323ff"
        android:backgroundTint="#2196F3" />

</LinearLayout>
