<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF7E6">

    <LinearLayout
        android:id="@+id/rewardsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:orientation="vertical">

        <!-- T칤tulo -->
        <TextView
            android:id="@+id/txtRewardsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recompensas"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#FF8C00"
            android:layout_gravity="center"
            android:paddingBottom="16dp" />

        <!-- Puntos actuales -->
        <TextView
            android:id="@+id/txtCurrentPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Puntos: 0"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:layout_gravity="center"
            android:paddingBottom="24dp" />

        <!-- 游댠 Aqu칤 la API agregar치 din치micamente m치s recompensas -->

        <!-- Bot칩n Volver -->
        <Button
            android:id="@+id/btnBackRewards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Volver"
            android:backgroundTint="#FF9800"
            android:textColor="#FFFFFF"
            android:layout_marginTop="10dp"
            android:paddingVertical="12dp" />

    </LinearLayout>
</ScrollView>
